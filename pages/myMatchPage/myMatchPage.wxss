/* pages/myMatchPage/myMatchPage.wxss */


/*背景图（上）*/
.topBgImg{
  z-index: -1;
  position: absolute;
  width:100%;
  height: 30%;
}

/*背景图（下）*/
.downBgImg{
  z-index:-1;
  position: absolute;
  top:30%;
  width:100%;
  height: 70%;
}
/*功能面板*/
.operationPanel{
    display: flex;
    position: relative;
    top:450rpx;
    width:750rpx;
    flex-wrap: wrap;
    justify-content: center;
}

/*标题*/
.roomInfoTitleTips{
  display: flex;
  position:relative;
  color: rgba(63, 61, 61, 0.781);
  font-size: 46rpx;
}


/*显示比赛信息的面板*/
.matchPanel{
  display: flex;
  position: absolute;
  top:70rpx;
  width:380rpx;
  flex-wrap: wrap;
  row-gap: 40rpx;
}
/*显示一个比赛的信息*/
.matchInfoButton{
  display: flex;
  position: relative;
  justify-content: center;
  border: 1px solid black;
  border-radius: 20rpx;
  background-color: white;
  flex-wrap: wrap;
}

/*比赛信息文字格式*/
.matchTips{
    display: flex;
    position:relative;
    color: black;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 20rpx;
    justify-content: left;
}

/*按键点击态*/
.buttonHoverClass{
    background: linear-gradient(to right, #ead6ee, #a0f1ea);
}


/*返回键面板*/
.goBackPanel{
  display: flex;
  position: absolute;
  top:1350rpx;
  width:100%;
  flex-wrap: wrap;
  left:30%;
  justify-content: right;
}
/*返回按键*/
.gobackButton{
    display: flex;
    position: relative;
    background-color: white;
    justify-content: center;
    border: 1px solid black;
    border-radius: 10px;  
}


/*按键提示*/
.goBackTips{
    display: flex;
    position:relative;
    color: rgba(63, 61, 61, 0.781);
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
}