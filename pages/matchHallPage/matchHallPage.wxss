/* pages/matchHallPage/matchHallPage.wxss */

/*背景图（上）*/
.topBgImg{
  z-index: -1;
  position: absolute;
  width:100%;
  height: 30%;
}

/*背景图（下）*/
.downBgImg{
  z-index:-1;
  position: absolute;
  top:30%;
  width:100%;
  height: 70%;
}
/*功能面板*/
.operationPanel{
    display: flex;
    position: absolute;
    top:400rpx;
    flex-wrap: wrap;
}
/*筛选面板*/
.selectPanel{
    display: flex;
    position: relative;
    width:750rpx;
    top:60rpx;
    height:60rpx;
    justify-content: space-between;
}
/*选择栏*/
.selectPicker{
    display: flex;
    position: relative;
    background: white;
    border: 1px solid black;
    border-radius: 2px; 
    justify-content: center;
}
/*选择栏文字*/
.pickerTips{
    display: flex;
    position:relative;
    color: rgba(63, 61, 61, 0.781);
    align-items: center;
    justify-content: center;
    font-size: 35rpx;
}

/*筛选按钮*/
.selectButton{
    display: flex;
    position: relative;
    top:100rpx;
    border: 1px solid black;
    border-radius: 2px;  
    background-color: white;
}
/*筛选按钮的文字提示*/
.selectTips{
    display: flex;
    position:relative;
    color: rgba(63, 61, 61, 0.781);
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
}

/*显示比赛信息的面板*/
.matchPanel{
  display: flex;
  position: absolute;
  top:300rpx;
  width:470rpx;
  flex-wrap: wrap;
  row-gap: 40rpx;
}
/*显示一个比赛的信息*/
.matchInfoButton{
  display: flex;
  position: relative;
  justify-content: center;
  border: 1px solid black;
  border-radius: 20rpx;
  background-color: white;
  left:140rpx;
  flex-wrap: wrap;
}

/*比赛信息文字格式*/
.matchTips{
    display: flex;
    position:relative;
    color: black;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 20rpx;
    justify-content: left;
}

/*按键点击态*/
.buttonHoverClass{
    background: linear-gradient(to right, #ead6ee, #a0f1ea);
}


/*返回键面板*/
.goBackPanel{
  display: flex;
  position: absolute;
  top:950rpx;
  width:100%;
  flex-wrap: wrap;
  left:30%;
  justify-content: right;
}
/*返回按键*/
.gobackButton{
    display: flex;
    position: relative;
    background-color: white;
    justify-content: center;
    border: 1px solid black;
    border-radius: 10px;  
}


/*按键提示*/
.goBackTips{
    display: flex;
    position:relative;
    color: rgba(63, 61, 61, 0.781);
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
}