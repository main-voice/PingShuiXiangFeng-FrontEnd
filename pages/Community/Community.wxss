/* pages/Community/Community.wxss */

.search {
    width: 80%;
}

.search_arr {
    border: 1px solid #d0d0d0;
    border-radius: 10rpx;
    margin-left: 20rpx;
}

.search_arr input {
    margin-left: 60rpx;
    height: 60rpx;
    border-radius: 5px;
}

.bc_text {
    line-height: 68rpx;
    height: 68rpx;
    margin-top: 34rpx;
}

.sousuo {
    width: 10%;
    padding: 1%;
    margin: 0%;
    /*line-height: 150%;*/
    text-align: center;
    border: 1px solid #d0d0d0;
    border-radius: 10rpx; /* 半径 圆角矩形弧度 */
}

.page_row {
    position: absolute;
    display: flex;
    flex-direction: row;
    align-self: center;
    width: 90%;
    top: 500rpx;
    justify-content: space-between;
    padding: 1%;
    margin: 1%;
}

.post_info {
    display: flex;
    flex-direction: row;
}

.searchicon {
    margin: 10rpx 10rpx 10rpx 10rpx;
    position: absolute;
    left: 25rpx;
    z-index: 2;
    width: 20px;
    height: 20px;
    text-align: center;
}

.post {
    width: 70%;
    margin: 20rpx;
    padding: 1%;
    align-self: center;
    line-height: 150%;
    border: 2px solid #f06a6a;
    border-radius: 10rpx; /* 半径 圆角矩形弧度 */
    color: #555353;

    position: relative;
    display: flex;
    flex-direction: column;

    top: 600rpx;
}


.viewAll {
    padding: 1.5%;
    line-height: 100%;
    text-align: center;
    border: 5rpx solid #d0d0d0;
    border-radius: 10rpx; /* 半径 圆角矩形弧度 */
    color: #f06a6a;
}

.topBgImg {
    position: absolute;
    width: 100%;
    height: 30%;
    /*background-image: url("../../images/topBg1.jpg");*/
}

.enter {
    flex-wrap: wrap;
}

.downBgImg {
    position: absolute;
    width: 100%;
    top: 30%;
    height: 70%;
}

.div {

    display: flex;
    flex-direction: column;
    position: relative;
    top: 70%;
}