/* pages/rank/rank.wxss */

.div {
        padding-top: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
}

.title {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        width: 600rpx;
        margin: 10rpx;
        border-bottom: 4rpx rgb(#fa8072) solid;
}

.Text {
        margin: auto;
        text-align: center;
        font-size: 20px;
        color: rgb(68, 68, 68);
}

.userItem{
        display:flex;
        flex-direction: row;
        justify-content: space-between;
        width: 80%;
        margin-top: 10rpx;
        margin-bottom: 10rpx;
        border: 1px solid;
        border-color: #fa8072;
        border-radius: 10px;
        padding: 5px;
}